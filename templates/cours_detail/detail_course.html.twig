                                    <summary>
                                        <div class="row">
                                            <h3 >
                                                <img src="{{asset('img/books.svg')}}" style="width:3rem; height:"3rem"/>
                                                <strong>{{ lesson.titre }}</strong>
                                                <small></small>
                                            </h3>
                                            <span> </span>
                                        </div>
                                    </summary>
                                    <div>  <!-- Détails de la leçon -->
