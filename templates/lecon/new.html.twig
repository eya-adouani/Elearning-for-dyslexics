{% extends 'baseB.html.twig' %}

{% block title %}New Lecon{% endblock %}

{% block body %}
<style>.container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f5f8fa; /* Light blue-gray */
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
}

.title {
    color: #3498db; /* Blue */
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 20px;
}

.quiz-info {
    color: #666; /* Gray */
    margin-bottom: 10px;
}

.btn-primary {
    background-color: #3498db; /* Blue */
    color: #fff; /* White */
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    cursor: pointer;
}

.btn-primary:hover {
    background-color: #2980b9; /* Dark blue on hover */
}

.back-link {
    color: #3498db; /* Blue */
    text-decoration: none;
    display: inline-block;
    margin-top: 10px;
}

.back-link:hover {
    text-decoration: underline;
}
</style>
<div class="container">
    <h1 class="title">Create New Lesson</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.titre, 'Titre') }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control ' ~ (form.titre.vars.errors|length > 0 ? 'is-invalid' : ''), 'placeholder': 'Entrez le titre de la leçon'}}) }}
        {{ form_errors(form.titre, {'attr': {'class': 'text-danger'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control ' ~ (form.description.vars.errors|length > 0 ? 'is-invalid' : ''), 'placeholder': 'Entrez la description de la leçon'}}) }}
        {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.contenu, 'Contenu') }}
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control ' ~ (form.contenu.vars.errors|length > 0 ? 'is-invalid' : ''), 'placeholder': 'Entrez le contenu de la leçon'}}) }}
        {{ form_errors(form.contenu, {'attr': {'class': 'text-danger'}}) }}
    </div>

    {% if quiz %}
        <p class="quiz-info">Quiz: {{ quiz.getTitre() }}</p>
    {% else %}
        <p class="quiz-info">No quiz associated with this lesson.</p>
    {% endif %}

    <div class="form-group">
        {{ form_row(form.quiz, {'label': 'Quiz'}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.cours, {'label': 'Course'}) }}
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="{{ path('app_lecon_index') }}" class="btn btn-primary">Back to List</a>
    {{ form_end(form) }}

</div>
{% endblock %}
