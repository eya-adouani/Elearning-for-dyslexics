{% extends 'baseB.html.twig' %}

{% block title %}Edit Leçon{% endblock %}

{% block body %}
<style>.container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f5f8fa; /* Light blue-gray */
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
}

.title {
    color: #3498db; /* Blue */
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 20px;
}

.quiz-info {
    color: #666; /* Gray */
    margin-bottom: 10px;
}

.btn-primary {
    background-color: #3498db; /* Blue */
    color: #fff; /* White */
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    cursor: pointer;
}

.btn-primary:hover {
    background-color: #2980b9; /* Dark blue on hover */
}

.back-link {
    color: #3498db; /* Blue */
    text-decoration: none;
    display: inline-block;
    margin-top: 10px;
}

.back-link:hover {
    text-decoration: underline;
}
</style>
<div class="container">
    <h1 class="mb-4">Edit Leçon</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            {{ include('lecon/_form.html.twig', {'button_label': 'Update', 'button_class': 'btn btn-primary'}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <a href="{{ path('app_lecon_index') }}" class="btn btn-info btn-sm p-3">Back to List</a>
            {{ include('lecon/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
